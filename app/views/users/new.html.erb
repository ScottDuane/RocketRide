<div class="cover-page"></div>

<div class="container-fluid">
  <div class="row">
    <div id="signupbox" class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="my-info" >
          <div class="my-heading">
              <div class="my-title">Sign Up for RocketRide</div>
              <div style="float:right; font-size: 80%; position: relative; top:-10px"></div>
          </div>

          <div style="padding-top:30px" class="panel-body" >
              <div style="display:none" id="signup-alert" class="alert alert-danger col-sm-12"></div>

              <form id="signupform" action="<%= users_url %>" method="post" class="form-horizontal" role="form">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                  <div style="margin-bottom: 25px" class="input-group">
                      <span class="input-group-addon"></span>
                      <input id="signup-username" type="text" class="form-control" name="user[username]" placeholder="Username">
                  </div>

                  <div style="margin-bottom: 25px" class="input-group">
                      <span class="input-group-addon"></span>
                      <input id="signup-password" type="password" class="form-control" name="user[password]" placeholder="Password">
                  </div>
                      <div style="margin-top:10px" class="form-group">
                          <!-- Button -->
                          <div class="my-button" class="col-sm-12 controls">
                            <input type="submit" value="Sign Up">
                          </div>
                      </div>


                      <div class="form-group">
                          <div class="col-md-12 control info-text">
                              <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                  Already have an account?
                                  <%= link_to "Log In Here", new_session_url %>
                              </div>
                          </div>
                      </div>

                      <div class="form-group">
                          <%= render "layouts/errors" %>
                      </div>
                  </form>
              </div>
          </div>
    </div>
</div>
